{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    
    /* Adicionando baseUrl e paths para o servidor também */
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  },
  "include": [
    "src/**/*.ts", // Inclui todos os arquivos .ts na pasta src do servidor
    "middlewares/**/*.ts", // Inclui seus middlewares
    "models/**/*.ts", // Inclui seus models
    "../shared/types/express/index.d.ts" // <-- A LINHA MÁGICA QUE RESOLVE O ERRO
  ],
  "exclude": ["node_modules"]
}
