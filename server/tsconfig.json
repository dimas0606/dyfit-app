{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", // Formato mais compatível para Node.js no Render
    "moduleResolution": "node",
    "outDir": "./dist", // Onde os arquivos compilados irão
    "rootDir": "./",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "../shared/types"] // Aponta para a pasta de tipos compartilhados
  },
  "include": ["**/*.ts"], // Inclui todos os arquivos .ts do servidor
  "exclude": ["node_modules"]
}